@model MusicGarden.Client.Models.SavingModel;
<h2>Search Results</h2>

@if (ViewBag.SearchResults.Count == 0)
{
  @: no results found!
}

<form action="/home/saving" method="get">
  <div class="form-group">
    <div class="row">
      <input type="text" class="form-control" placeholder="Enter the name of the playlist you'd like to add a song to!"
        asp-for="playlistname">
    </div>

    @foreach (var item in ViewBag.SearchResults)
    {
      <input type="radio" asp-for="track" value=@item.Substring(6)>
      <div class="row">
        <iframe title="deezer-widget" src="https://widget.deezer.com/widget/dark/@item" width="100%" height="140"
        frameborder="0" allowtransparency="true" allow="encrypted-media; clipboard-write"></iframe>
      </div>
    }
  </div>
  <button type="submit">Submit</button>
</form>